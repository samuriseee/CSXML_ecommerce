@model IEnumerable<CuoiKi.Areas.admin.Models.NhapHang>

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-home"></i> &nbsp; CHI TIẾT NHẬP HÀNG  @ViewBag.ncc
}
@{ var maNCC = "";}
@foreach (var item in Model)
{
    maNCC = item.maNCC;
    break;
}
    @using (Html.BeginForm("Details", "NhapHang", FormMethod.Get))
    {
        <div class="col-lg-12 form-group">
            <div class="col-md-6">
                @Html.ActionLink("Tạo mới đơn nhập", "Create_Nhap",  new { id = maNCC }, new { @class = "btn btn-danger" })
            </div>
        </div>
    }
<div class="col-lg-12 form-group">
    <div class="col-md-6">
        @Html.ActionLink("Quay lại", "Index", "NhapHang", new { @class = "btn btn-primary" })
    </div>
</div>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ngayNhap)
        </th>

        <th>Thao tác</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngayNhap)
            </td>
            <td>
                @Html.ActionLink("Thêm sản phẩm nhập hàng", "Create_chiTietNhap", new { id = item.id }) &nbsp;&nbsp;|&nbsp;&nbsp;
                @Html.ActionLink("Chi tiết", "Detail_Nhap", new { id = item.id })
            </td>
        </tr>
    }

</table>
